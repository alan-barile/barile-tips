<!-- DataTales Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary">Comprimento de Ancoragem</h6>
	</div>
	
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th rowspan="2">No</th>
						<th rowspan="2">Bitola<br />(mm)</th>
						<th colspan="2">C15</th>
						<th colspan="2">C20</th>
						<th colspan="2">C25</th>
						<th colspan="2">C30</th>
						<th colspan="2">C35</th>
						<th colspan="2">C40</th>
					</tr>
					
					<tr>
						<th>Má</th>
						<th>Boa</th>
						<th>Má</th>
						<th>Boa</th>
						<th>Má</th>
						<th>Boa</th>
						<th>Má</th>
						<th>Boa</th>
						<th>Má</th>
						<th>Boa</th>
						<th>Má</th>
						<th>Boa</th>
					</tr>
				</thead>
					
				<tbody>
					<% @comprimentosAncoragem.each do |item| %>
					<tr>
						<% item.each do |tmp| %>
							<th><%= tmp %></th>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<p> Obs: Comprimento de ancoragem em centímetros. Má = Região de má aderência, Boa = Região de boa aderência. </p>
	</div>
</div>
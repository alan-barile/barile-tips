<!-- DataTales Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary">Tabela de Telas</h6>
	</div>
	
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<% for i in 0..6 do %>
							<th><%= @cabecalho[i] %></th>
						<% end %>
					</tr>
				</thead>
					
				<tbody>
						<% @tabela_telas.each do |item| %>
						<tr>
							<% for i in 0..6 do %>
								<th><%= item[i] %></th>
							<% end %>
						</tr>
						<% end %>
					
				</tbody>
			</table>
		</div>
	</div>
</div>
<!-- DataTales Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary">Tabela de Perfil Laminado</h6>
	</div>
	
	<div class="card-body">
		<div style="text-align:center">
			<%= image_tag "perfil_I.PNG" %>
		</div>
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>No</th>
						<th>Bitola<br />mm x kg/m</th>
						<th>Massa Linear<br />kg/m</th>
						<th>d<br />mm</th>
						<th>bf<br />mm</th>
						<th>tw<br />mm</th>
						<th>tf<br />mm</th>
						<th>h<br />mm</th>
						<th>d'<br />mm</th>
						<th>Área<br />cm²</th>
					</tr>
				</thead>
					
				<tbody>
						<% @tabela_perfil_laminado.each do |item| %>
						<tr>
							<% for i in 0..9 do %>
								<th><%= item[i] %></th>
							<% end %>
						</tr>
						<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>